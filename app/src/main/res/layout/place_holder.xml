<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/image"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_21"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginBottom="@dimen/padding_21"
        android:backgroundTint="@color/placeholder_bg"
        app:cardBackgroundColor="@color/placeholder_bg"
        app:cardCornerRadius="@dimen/padding_16"
        app:cardElevation="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/padding_100"
            android:layout_height="@dimen/padding_8"
            android:layout_marginRight="50dp"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="@dimen/padding_260"
            android:layout_height="@dimen/padding_8"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/padding_16"
            android:layout_toRightOf="@+id/image"
            android:background="@color/placeholder_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/image"
        android:background="@color/lightGray" />
</RelativeLayout>
