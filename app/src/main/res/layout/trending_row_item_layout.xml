<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/image_card_view"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_21"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginBottom="@dimen/padding_21"
        android:background="@color/placeholder_bg"
        app:cardCornerRadius="@dimen/padding_16"
        app:cardElevation="0dp"
        card_view:cardBackgroundColor="@color/placeholder_bg">

        <ImageView
            android:id="@+id/user_image_view"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:backgroundTint="@color/lightGray"
            />


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/padding_21"
        android:layout_marginBottom="@dimen/padding_21"
        android:layout_toRightOf="@+id/image_card_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author_name_view"
            android:layout_width="@dimen/padding_100"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:theme="@style/AuthorStyle" />

        <TextView
            android:id="@+id/name_view"
            android:layout_width="@dimen/padding_260"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/padding_16"
            android:layout_toRightOf="@+id/image"
            android:theme="@style/NameStyle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/image"
        android:background="@color/lightGray" />
</RelativeLayout>
